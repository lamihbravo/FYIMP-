    #include<stdio.h>
#include<math.h>
int main()
{
    float a,b,c,inside_root,root_1,root_2;
    printf("enter a,b,c:");
    scanf("%f %f %f",&a,&b,&c);
    inside_root= b * b - 4 * a * c;
    
    root_1= ( - b + sqrt(inside_root) )/2;
    root_2=( - b - sqrt(inside_root) ) /2;

    int option;
 
    printf("enter option : 1.+ root\n2.- root\n ");
    scanf("%d",&option);
    
   switch(option)
    {
        case 1:
        printf("the quadratic equation ans is %f",root_1);
        break;
        case 2:
        printf("the quadratic equation ans is %f",root_2);
        break;
        default:
        printf("noki ninno ippam kittum");
        
    }
    
}